{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for trick in pager %}
            <div class="col">
                <div class="card">
                    {% if trick.pictures is not empty %}
                        <div id="{{ 'carouselExampleIndicators'~trick.id }}" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                {% for picture in trick.pictures %}
                                    {% if picture == trick.pictures.first %}
                                    <div class="carousel-item active">
                                        <img src="{{ picture.path }}" class="d-block w-100 card-img-top" alt="{{ picture.alt }}">
                                    </div>
                                    {% else %}
                                        <div class="carousel-item">
                                            <img src="{{ picture.path }}" class="d-block w-100 card-img-top" alt="{{ picture.alt }}">
                                        </div>
                                    {% endif %}

                                {% endfor %}

                            </div>

                            <button class="carousel-control-prev" type="button"
                                    data-bs-target="#{{ 'carouselExampleIndicators'~trick.id }}" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                    data-bs-target="#{{ 'carouselExampleIndicators'~trick.id }}" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ trick.title }}</h5>
                        <p class="fst-italic">{{ trick.author.username }}</p>
                        <hr>
                        <p class="card-text">{{ trick.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {{ pagerfanta(pager) }}
{% endblock %}
