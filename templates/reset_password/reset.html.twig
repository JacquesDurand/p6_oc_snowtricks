{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="row text-orange">
    <div class="login-form bg-dark mt-4 p-4">
    <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>

    {{ form_start(resetForm) }}
        <div class="col-12">
            {{ form_row(resetForm.plainPassword) }}
        </div>
        <div class="col-12">
            <button class="text-orange btn btn-lg btn-outline-light float-end">Reset password</button>
        </div>
    {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
